<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="#FFFCFB"
    >

    <com.prograpy.app1.appdev1.view.TopbarView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/topbar_height"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="80dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_centerInParent="true"
        android:layout_margin="30dp"
        android:text="M o z i  M o z i     로  그  인"
        android:textColor="#432B2D"
        android:textSize="13sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="#FFFCFB"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        
            <EditText
                android:id="@+id/login_id"
                android:layout_width="310dp"
                android:layout_height="55dp"
                android:layout_gravity="center"
                android:maxLines="1"
                android:background="@drawable/login_edit_custom"
                android:hint="아이디"
                android:paddingLeft="20dp"
                android:textColor="#BDBDBD"
                android:inputType="text"
                android:imeOptions="actionNext"
                android:textSize="14sp"/>

            <EditText
                android:id="@+id/login_pw"
                android:layout_width="310dp"
                android:layout_height="55dp"
                android:layout_gravity="center"
                android:background="@drawable/login_edit_custom"
                android:hint="비밀번호"
                android:imeOptions="actionDone"
                android:inputType="text"
                android:password="true"
                android:maxLines="1"
                android:layout_marginTop="7dp"
                android:paddingLeft="20dp"
                android:singleLine="false"
                android:textColor="#BDBDBD"
                android:textSize="14sp" />

            

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:layout_marginTop="10dp">

            <CheckBox
                android:id="@+id/login_auto"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_marginTop="3dp"
                android:layout_marginRight="10dp"
                android:layout_gravity=""
                android:text="자동 로그인"
                android:textSize="12dp"
                android:textColor="#432B2D"/>

            <TextView
                android:id="@+id/login_secu"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_marginTop="3dp"
                android:layout_marginLeft="90dp"
                android:text="비밀번호를 잊으셨나요?"
                android:textSize="12dp"
                android:textColor="#432B2D"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="15dp">

            <Button
                android:id="@+id/join_btn"
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:backgroundTint="@color/Color_white"
                android:backgroundTintMode="src_in"
                android:onClick="onClick"
                android:text="회 원 가 입"
                android:textColor="@color/Color_grey05"
                android:textStyle="bold" />

            <Button
                android:id="@+id/login_btn"
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:layout_marginLeft="20dp"
                android:backgroundTint="#FAD9CD"
                android:backgroundTintMode="src_in"
                android:onClick="onClick"
                android:text="로 그 인"
                android:textColor="#432B2D"
                android:textStyle="bold" />

        </LinearLayout>



     </LinearLayout>

    </LinearLayout>

</LinearLayout>