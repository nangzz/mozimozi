<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/Color_white"
    android:orientation="vertical">

    <com.prograpy.app1.appdev1.view.TopbarView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/topbar_height"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="65dp"
            android:layout_height="25dp"
            android:gravity="center"
            android:text="약관 동의"
            android:textColor="@color/Color_grey06"
            android:textSize="15sp"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:src="@drawable/btn_arr_01_prs"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:gravity="center"
            android:text="회원 정보 입력"
            android:textColor="@color/Color_black"
            android:textSize="15sp"
            android:textStyle="bold"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:src="@drawable/btn_arr_01_nor"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:gravity="center"
            android:text="가입 완료"
            android:textColor="@color/Color_grey06"
            android:textSize="15sp"/>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/Color_grey04"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:layout_marginTop="45dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_marginBottom="10dp"
                android:layout_marginRight="10dp"
                android:gravity="center_vertical"
                android:text="아이디"
                android:textColor="@color/Color_black"
                android:textSize="12sp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_marginBottom="10dp"
                android:layout_marginRight="10dp"
                android:gravity="center_vertical"
                android:text="비밀번호"
                android:textColor="@color/Color_black"
                android:textSize="12sp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_marginBottom="10dp"
                android:layout_marginRight="10dp"
                android:gravity="center_vertical"
                android:text="비밀번호 확인"
                android:textColor="@color/Color_black"
                android:textSize="12sp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_marginBottom="10dp"
                android:layout_marginRight="10dp"
                android:gravity="center_vertical"
                android:text="이름"
                android:textColor="@color/Color_black"
                android:textSize="12sp"/>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_marginBottom="10dp"
                android:layout_marginRight="10dp"
                android:gravity="center_vertical"
                android:text="이메일"
                android:textColor="@color/Color_black"
                android:textSize="12sp"/>
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_marginBottom="10dp"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/user_id"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:layout_weight="1"
                    android:background="@drawable/shape_white_back"
                    android:hint="영소문자+숫자 조합 4~16자 이내"
                    android:paddingLeft="5dp"
                    android:textColor="@color/Color_black"
                    android:imeOptions="actionNext"
                    android:textSize="12sp"/>

                <Button
                    android:id="@+id/btn_check_id"
                    android:layout_width="75dp"
                    android:layout_height="35dp"
                    android:gravity="center"
                    android:text="중복확인"
                    android:textSize="12sp"/>

            </LinearLayout>


            <EditText
                android:id="@+id/user_pw"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_marginBottom="10dp"
                android:layout_weight="1"
                android:background="@drawable/shape_white_back"
                android:hint="영소문자+숫자 조합 8~16자 이내"
                android:paddingLeft="5dp"
                android:textColor="@color/Color_black"
                android:imeOptions="actionNext"
                android:inputType="textPassword"
                android:textSize="12sp"/>

            <EditText
                android:id="@+id/user_pw2"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_marginBottom="10dp"
                android:layout_weight="1"
                android:background="@drawable/shape_white_back"
                android:hint="영소문자+숫자 조합 8~16자 이내"
                android:paddingLeft="5dp"
                android:textColor="@color/Color_black"
                android:imeOptions="actionNext"
                android:inputType="textPassword"
                android:textSize="12sp"/>

            <EditText
                android:id="@+id/user_name"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_marginBottom="10dp"
                android:layout_weight="1"
                android:background="@drawable/shape_white_back"
                android:hint="한글"
                android:paddingLeft="5dp"
                android:textColor="@color/Color_black"
                android:imeOptions="actionNext"
                android:textSize="12sp"/>


            <EditText
                android:id="@+id/user_email"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_marginBottom="10dp"
                android:layout_weight="1"
                android:background="@drawable/shape_white_back"
                android:paddingLeft="5dp"
                android:textColor="@color/Color_black"
                android:imeOptions="actionDone"
                android:inputType="textEmailAddress"
                android:textSize="12sp"/>
        </LinearLayout>

    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="10dp">

        <Button
            android:id="@+id/btn_cancel"
            android:layout_marginRight="5dp"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:text="취소"/>


        <Button
            android:id="@+id/btn_next"
            android:layout_marginRight="5dp"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:text="다음"/>

    </LinearLayout>

</LinearLayout>