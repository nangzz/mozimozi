<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/Color_white"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_marginLeft="15dp"
        android:gravity="center_vertical"
        android:text="Home"
        android:textColor="@color/Color_black"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/Color_grey04"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/layout_login"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:visibility="gone"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginBottom="3dp"
                    android:layout_marginTop="15dp"
                    android:text="김선경[skk095]님"
                    android:textColor="@color/Color_black"
                    android:textSize="14sp"
                    android:textStyle="bold"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="반갑습니다. 즐거운 하루 되세요."
                    android:textColor="@color/Color_black"
                    android:textSize="14sp"/>



                <TextView
                    android:id="@+id/btn_logout"
                    android:layout_width="65dp"
                    android:layout_height="25dp"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/select_login_btn_background"
                    android:clickable="true"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="로그아웃"
                    android:textColor="@color/Color_black"
                    android:textSize="12sp"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_logout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:visibility="gone"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="15dp"
                    android:text="고객님은 '로그아웃' 상태입니다."
                    android:textColor="@color/Color_black"
                    android:textSize="14sp"
                    android:textStyle="bold"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginBottom="15dp"
                    android:gravity="center"
                    android:text="로그인 및 회원가입을 하시면 더 다양한\n기능을 이용하실 수 있습니다."
                    android:textColor="@color/Color_grey06"
                    android:textSize="12sp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="15dp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/btn_login"
                        android:layout_width="65dp"
                        android:layout_height="25dp"
                        android:layout_marginRight="15dp"
                        android:background="@drawable/select_login_btn_background"
                        android:clickable="true"
                        android:gravity="center"
                        android:text="로그인"
                        android:textColor="@color/Color_black"
                        android:textSize="12sp"/>

                    <TextView
                        android:id="@+id/btn_join"
                        android:layout_width="65dp"
                        android:layout_height="25dp"
                        android:background="@drawable/select_login_btn_background"
                        android:clickable="true"
                        android:gravity="center"
                        android:text="회원가입"
                        android:textColor="@color/Color_black"
                        android:textSize="12sp"/>


                </LinearLayout>
            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp">

                <ImageView
                    android:id="@+id/img_login"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:scaleType="fitXY"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="5dp"
                    android:layout_centerHorizontal="true"
                    android:src="@drawable/background"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/img_login"
                    android:layout_marginBottom="15dp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/btn_mypage"
                        android:layout_width="65dp"
                        android:layout_height="25dp"
                        android:layout_marginRight="15dp"
                        android:clickable="true"
                        android:gravity="center"
                        android:text="My page"
                        android:textColor="@color/Color_brown"
                        android:textSize="15sp"/>

                    <TextView
                        android:id="@+id/btn_zzim"
                        android:layout_width="65dp"
                        android:layout_height="25dp"
                        android:layout_marginLeft="15dp"
                        android:clickable="true"
                        android:gravity="center"
                        android:text="찜목록"
                        android:textColor="@color/Color_brown"
                        android:textSize="15sp"/>

                </LinearLayout>

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/Color_grey04"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="90dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/menu_sbs"
                        android:layout_width="match_parent"
                        android:layout_height="25dp"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:src="@drawable/logo_sbs"/>

                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:background="@color/Color_grey04"/>


                    <ImageView
                        android:id="@+id/menu_kbs"
                        android:layout_width="match_parent"
                        android:layout_height="25dp"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:src="@drawable/logo_kbs"/>

                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:background="@color/Color_grey04"/>


                    <ImageView
                        android:id="@+id/menu_mbc"
                        android:layout_width="match_parent"
                        android:layout_height="25dp"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:src="@drawable/logo_mbc"/>

                </LinearLayout>


                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/Color_grey04"/>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="90dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/menu_tvn"
                        android:layout_width="match_parent"
                        android:layout_height="25dp"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:src="@drawable/logo_tvn"/>

                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:background="@color/Color_grey04"/>


                    <ImageView
                        android:id="@+id/menu_jtbc"
                        android:layout_width="match_parent"
                        android:layout_height="25dp"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:src="@drawable/logo_jtbc"/>

                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:background="@color/Color_grey04"/>


                    <ImageView
                        android:id="@+id/menu_ocn"
                        android:layout_width="match_parent"
                        android:layout_height="25dp"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:src="@drawable/logo_ocn"/>

                </LinearLayout>

                <TextView
                    android:id="@+id/menu_mypage"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:gravity="center_vertical"
                    android:paddingLeft="15dp"
                    android:visibility="gone"
                    android:text="마이페이지"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/Color_grey04"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:gravity="center_vertical"
                    android:paddingLeft="15dp"
                    android:text="공지사항"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/Color_grey04"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:gravity="center_vertical"
                    android:paddingLeft="15dp"
                    android:text="FAQ"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/Color_grey04"/>


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:gravity="center_vertical"
                    android:paddingLeft="15dp"
                    android:text="1:1 문의"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/Color_grey04"/>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>


</LinearLayout>