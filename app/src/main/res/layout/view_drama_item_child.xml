<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/view_parent"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_item_custom"
    android:layout_margin="5dp"
    android:orientation="vertical"
    android:layout_weight="1">

    <RelativeLayout
        android:layout_width="210dp"
        android:layout_height="210dp"
        android:gravity="center">

        <ImageView
            android:id="@+id/item_image"
            android:layout_width="210dp"
            android:layout_height="210dp"
            android:padding="1dp"
            android:layout_gravity="center"
            android:scaleType="fitXY"
            android:src="@drawable/empty_item"/>

        <ImageView
            android:id="@+id/heart_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="10dp"
            android:src="@drawable/heart_btn_selector" />

    </RelativeLayout>

    <TextView
        android:id="@+id/item_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="10dp"
        android:text="프로듀스 16화"
        android:textColor="@color/Color_mozi_grey1"
        android:textSize="12sp"/>

    <TextView
        android:id="@+id/item_name"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="5dp"
        android:text="아이유 선글라스"
        android:textColor="#432B2D"
        android:textStyle="bold"
        android:textSize="12sp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="5dp"
        android:gravity="right"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/item_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="950,000"
            android:textColor="#432B2D"
            android:textSize="17sp"
            android:textStyle="bold"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="원"
            android:textColor="#432B2D"
            android:textSize="14sp"
            android:textStyle="bold"/>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/item_zzim"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="찜하기"
            android:textSize="13sp"
            android:textColor="@color/Color_mozi_grey1"/>

        <TextView
            android:id="@+id/item_url"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="자세히보기"
            android:textSize="13sp"
            android:textColor="@color/Color_mozi_deep_pink"/>


    </LinearLayout>


</LinearLayout>