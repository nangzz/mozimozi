<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/Color_mozi_white"
              android:paddingLeft="15dp"
              android:paddingRight="15dp"
              android:orientation="vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="15dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="10dp"
            android:text="나의 찜"
            android:textColor="#432B2D"
            android:textSize="16sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/zzim_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:textColor="@color/Color_mozi_grey5"
            android:textSize="16sp"/>
    </LinearLayout>

    <View
        android:id="@+id/info_view1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/Color_mozi_grey"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/item_list_mypage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="#FFFCFB"
        android:orientation="vertical"/>

    <TextView
        android:id="@+id/empty_text"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="찜한 상품이 없습니다.\n마음에 드는 상품을 찜해보세요."
        android:gravity="center"
        android:visibility="gone"/>


</LinearLayout>
