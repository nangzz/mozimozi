<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/root_layout"
    android:layout_width="wrap_content"
    android:layout_height="440dp"
    android:layout_gravity="center"
    android:orientation="vertical"
    android:clickable="true">

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="300dp"
            android:layout_height="440dp"
            android:background="@drawable/popup_board"
            android:orientation="vertical"

            >

            <ImageView
                android:id="@+id/img_popup_content"
                android:layout_width="250dp"
                android:layout_height="200dp"
                app:srcCompat="@drawable/my_golden_life_bag2"
                android:layout_gravity="center"
                android:layout_margin="8dp"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#BDBDBD"/>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:orientation="horizontal"
                android:layout_gravity="center"
                android:gravity="center">

                <TextView
                    android:id="@+id/popup_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_centerInParent="true"
                    android:text="52회 서은수 가방"
                    android:textColor="#000000"
                    android:textSize="18sp" />

                <ImageView
                    android:id="@+id/popup_heart_btn"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_alignParentRight="true"
                    android:onClick="onClick"

                    app:srcCompat="@drawable/heart_emp" />
            </RelativeLayout>

            <TextView
                android:id="@+id/popup_brand"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="빈치스"
                android:padding="3dp"
                android:textSize="15sp"
                android:textColor="#000000"/>

            <TextView
                android:id="@+id/popup_price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="240,000원"
                android:padding="3dp"
                android:textSize="15sp"
                android:textColor="#000000"/>

            <ImageView
                android:id="@+id/popup_url_btn"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                app:srcCompat="@drawable/heart" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#BDBDBD"/>

            <HorizontalScrollView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/popup_rel_item"
                            android:layout_width="100dp"
                            android:layout_height="130dp"
                            android:layout_margin="8dp"
                            android:onClick="onClick"
                            app:srcCompat="@drawable/my_golden_life_bag1" />

                        <ImageView
                            android:layout_width="100dp"
                            android:layout_height="130dp"
                            app:srcCompat="@drawable/my_golden_life_acc1"
                            android:layout_margin="8dp"/>

                        <ImageView
                            android:layout_width="100dp"
                            android:layout_height="130dp"
                            app:srcCompat="@drawable/my_golden_life_acc2"
                            android:layout_margin="8dp"/>

                        <ImageView
                            android:layout_width="100dp"
                            android:layout_height="130dp"
                            app:srcCompat="@drawable/my_golden_life_shoes1"
                            android:layout_margin="8dp"/>

                        <ImageView
                            android:layout_width="100dp"
                            android:layout_height="130dp"
                            app:srcCompat="@drawable/my_golden_life_shirt1"
                            android:layout_margin="8dp"/>

                    </LinearLayout>
                </FrameLayout>

            </HorizontalScrollView>


        </LinearLayout>
    </ScrollView>


</LinearLayout>