<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@drawable/intro_back"
              android:orientation="vertical"
              tools:context="com.prograpy.app1.appdev1.join.IdSecurityActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/intro_text"
            android:layout_width="150dp"
            android:layout_height="80dp"
            android:layout_gravity="center"
            android:src="@drawable/logo_login"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="30dp"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/find_pw_text"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_gravity="left"
                android:layout_marginBottom="7dp"
                android:layout_marginRight="15dp"
                android:text="비밀번호 찾기"
                android:textColor="@color/Color_white"
                android:textSize="12dp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/go_login"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_gravity="right"
                android:layout_marginBottom="7dp"
                android:layout_marginRight="15dp"
                android:layout_alignParentRight="true"
                android:text="로그인 하러가기"
                android:textColor="@color/Color_white"
                android:textSize="12dp"
                android:textStyle="bold"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:text="이름"
                android:textColor="@color/Color_mozi_pink4"
                android:textSize="12dp"
                android:textStyle="bold"/>

            <EditText
                android:id="@+id/login_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_weight="1"
                android:background="@drawable/login_edit_custom"
                android:hint="가입하실때 입력한 이름을 적어주세요"
                android:imeOptions="actionNext"
                android:inputType="text"
                android:maxLines="1"
                android:paddingBottom="5dp"
                android:paddingLeft="15dp"
                android:paddingTop="25dp"
                android:textColor="@color/Color_white"
                android:textColorHint="@color/Color_mozi_pink2"
                android:textSize="12sp"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:text="이메일"
                android:textColor="@color/Color_mozi_pink4"
                android:textSize="12dp"
                android:textStyle="bold"/>

            <EditText
                android:id="@+id/login_mail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_weight="1"
                android:background="@drawable/login_edit_custom"
                android:hint="가입하실때 입력한 이메일을 적어주세요"
                android:imeOptions="actionDone"
                android:inputType="textEmailAddress"
                android:maxLines="1"
                android:paddingBottom="5dp"
                android:paddingLeft="15dp"
                android:paddingTop="25dp"
                android:textColor="@color/Color_white"
                android:textColorHint="@color/Color_mozi_pink2"
                android:textSize="12sp"/>

        </RelativeLayout>

        <Button
            android:id="@+id/id_btn"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/shape_btn_custom"
            android:text="아이디 찾기"
            android:textColor="@color/Color_white"
            android:textSize="14sp"
            android:textStyle="bold"/>

        <LinearLayout
            android:id="@+id/find_id_result"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone">

            <TextView
                android:id="@+id/id1"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_gravity="center"
                android:layout_marginTop="60dp"
                android:background="@drawable/login_edit_custom"
                android:gravity="center"
                android:textAlignment="center"
                android:textColor="@color/Color_mozi_white"
                android:textSize="16sp"
                android:textStyle="bold"/>



        </LinearLayout>

    </LinearLayout>


</LinearLayout>
