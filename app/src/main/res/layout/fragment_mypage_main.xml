<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
              android:background="@color/Color_mozi_white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

    <ImageView
        android:id="@+id/img_popup_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:src="@drawable/img_wish" />

    <TextView
        android:id="@+id/popup_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginLeft="1dp"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="10dp"
        android:text="찜 리스트"
        android:textColor="#432B2D"
        android:textSize="16sp"
        android:textStyle="bold"/>

    </LinearLayout>

    <View
        android:id="@+id/info_view1"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@drawable/drop_shadow" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/item_list_mypage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFCFB"
        android:orientation="vertical"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp"/>


</LinearLayout>
